---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Three.js Journey showcase">
  <main>
    <svg
      class="logo"
      id="Layer_1"
      data-name="Layer 1"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 30.11 33.69"
      ><polygon
        fill="#ff2478"
        points="8.89 17.35 0 12.22 0 23.18 8.89 28.32 8.89 17.35"
      ></polygon><path
        fill="#ff2478"
        d="M29.61,16l-7.73-4.36V22.06l7.73-4.35A1,1,0,0,0,29.61,16Z"
      ></path><polygon
        fill="#ff2478"
        points="1.25 10.63 9.94 15.65 10.32 15.65 19.55 10.32 10.57 5.25 1.25 10.63"
      ></polygon><polygon
        fill="#ff2478"
        points="10.89 28.26 19.88 23.19 19.88 12.44 10.89 17.63 10.89 28.26"
      ></polygon><path fill="#ff2478" d="M8.54,4.11,1.47.13A1,1,0,0,0,0,1V9.05Z"
      ></path><path fill="#ff2478" d="M0,25.49V32.7a1,1,0,0,0,1.47.87L7.81,30Z"
      ></path></svg
    >
    <h1>Welcome to HNRQ's Three.js Journey showcase</h1>
  </main>
</Layout>

<style>
  body {
    display: flex;
    margin: 0;
    height: 100vh;
    justify-content: center;
    align-items: center;
    background: black;
    color: white;
    text-align: center;
  }

  @keyframes rainbow {
    0% {
      filter: hue-rotate(0deg);
    }
    50% {
      filter: hue-rotate(100deg);
    }

    100% {
      filter: hue-rotate(0deg);
    }
  }

  .logo {
    width: 10rem;

    transition: transform 0.2s ease-in-out;

    &:hover {
      transform: scale(1.1);
      animation: rainbow 0.5s linear;
      animation-iteration-count: infinite;
    }

    &:active {
      transform: scale(0.9);
    }
  }
</style>
